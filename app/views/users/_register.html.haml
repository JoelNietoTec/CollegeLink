= form_for @user, :html => {:class => "form-horizontal jumbotron center-block col-sm-4"} do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  %h3.text-primary Regístrate
  .field
    = f.text_field :username, { :class => "form-control", :placeholder => "Nombre del Usuario" }
  .field
    = f.text_field :email, { :class => "form-control", :placeholder => "Email" }
  .field
    = f.password_field :password, { :class => "form-control", :placeholder => "Contraseña" }
  .field
    = f.password_field :password_confirmation, { :class => "form-control", :placeholder => "Confirmar Contraseña" }
  .actions
    = f.button(type: "submit", class: "btn btn-block btn-primary") do
      Registrarse
      = fa_icon 'user-plus'
  %p
    Ya tiene cuenta?
    = link_to "Iniciar Sesión", root_url
